<!DOCTYPE html>
<html lang="en">
    <!--HEAD-->
    <%- include("./partials/head") %>

    <body>
        <!--HEADER-->
        <%- include("./partials/header") %>

        <div class="slideshow-container">
            <div class="mySlides fade">
                <img src="/images/carrousel1.jpg" style="width:100%">
            </div>
            <div class="mySlides fade">
                <img src="/images/carrousel2.gif" style="width:100%">
            </div>
            <div class="mySlides fade">
                <img src="/images/carrousel3.jpg" style="width:100%">
            </div>
            <a class="prev" onclick="plusSlides(-1)">❮</a>
            <a class="next" onclick="plusSlides(1)">❯</a>
        </div>
        
        <div class="text-center mb-2">
            <span class="dot" onclick="currentSlide(1)"></span> 
            <span class="dot" onclick="currentSlide(2)"></span> 
            <span class="dot" onclick="currentSlide(3)"></span> 
        </div> 

        <main class="my-2 vw-90 mx-auto ">

            <div id="ofertas" class="titulo my-2 w-100">Ofertas</div>
            <section class="flex flex-wrap gap section mb-2">
                <% let contadorProductosConDescuento = 0; %>
                <% for (let i = 0; i < productos.length && contadorProductosConDescuento < 4; i++) { %>
                    <% if (productos[i].descuento >= 18) { %>
                        <article class="p-2 bt-1 border-grey border-radius bg-white product-shadow w-100 md-w-50 lg-w-25">
                            <a href="/productos/detail/<%= productos[i].id %>">
                                <div class="relative flex flex-wrap">
                                    <img class="w-100 border-radius" src="/images/productos/<%= productos[i].imagen %>" alt="<%= productos[i].descripcion %>">
                                    <p class="description"><%= productos[i].nombre %></p>
                                    <div class="flex flex-center w-100">
                                        <p class="precio">$<%= productos[i].precio %></p>
                                        <p class="descuento">
                                            <%= productos[i].descuento %>% OFF
                                        </p>
                                    </div>
                                    
                                </div>
                            </a>
                        </article>
                        <% contadorProductosConDescuento++; %>
                    <% } %>
                <% } %>
            </section>
                

            <div class="titulo my-2 w-100">Productos</div>
            <section class="flex flex-wrap gap section mb-2">
            <% let contadorProductos = 0; %>
                <% for (let i = 0; i < productos.length && contadorProductos < 4; i++) { %>
                    <% if (productos[i].descuento === null) { %>
                        <article class="p-2 bt-1 border-grey border-radius bg-white product-shadow w-100 md-w-50 lg-w-25">
                            <a href="/productos/detail/<%= productos[i].id %>">
                                <div class="relative flex flex-wrap">
                                    <img class="w-100 border-radius" src="/images/productos/<%= productos[i].imagen %>" alt="<%= productos[i].descripcion %>">
                                    <p class="description"><%= productos[i].nombre %></p>
                                    <div class="flex flex-center w-100">
                                        <p class="precio">$<%= productos[i].precio %></p>
                                    </div>
                                </div>
                            </a>
                        </article>
                        <% contadorProductos++; %>
                    <% } %>
                <% } %>
            </section>
            
        </main>
        
        <!--FOOTER-->
        <%- include("./partials/footer") %>
        
        <!--SCRIPTS-->
        <script src="/js/carrousel.js"></script>         
    </body>
</html>