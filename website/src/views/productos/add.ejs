<!DOCTYPE html>
<html lang="en">
    <!--HEAD-->
    <%- include("../partials/head") %>

    <body>
        <!--HEADER-->
        <%- include("../partials/header") %>

        <main>
            <form class="container-form my-1 flex flex-wrap" action="/productos/create" method="POST">
                <div class="w-100"><h2 class="text-center">AGREGAR PRODUCTO</h2></div>
                    <div class="w-25 p-2 bold">
                        <label for="sku">SKU</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="sku" id="" required>
                    </div>
                
                    <div class="w-25 p-2 bold">
                        <label for="nombre">Nombre</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="nombre" id="" required>
                    </div>
                    
                    <div class="w-25 p-2 bold">
                        <label for="descripcion">Descripcion</label>
                    </div>   
                    <div class="w-75">
                        <input class="form-control" type="text" name="descripcion" id="" required>
                    </div>

                    <div class="w-25 p-2 bold">
                        <label for="marca_id">Marca</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="marca_id" id="" required>
                    </div>

                    <div class="w-25 p-2 bold">
                        <label for="categoria_id">Categoria</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="categoria_id" id="" required>
                    </div>
               
                    <div class="w-25 p-2 bold">
                        <label for="precio">Precio</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="precio" id="" required>
                    </div>
                  
                    <div class="w-25 p-2 bold">
                        <label for="ancho">Ancho</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="ancho" id="" required>
                    </div>
               
                    <div class="w-25 p-2 bold">
                        <label for="alto">Alto</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="alto" id="" required>
                    </div>
               
                    <div class="w-25 p-2 bold">
                        <label for="profundidad">Profundidad</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="profundidad" id="" required>
                    </div>
              
                    <div class="w-25 p-2 bold">
                        <label for="peso">Peso</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="peso" id="" required>
                    </div>
                
                    <div class="w-25 p-2 bold">
                        <label for="imagen">Imagen</label>
                    </div>
                    <div class="w-75">
                        <input class="form-control" type="text" name="imagen" id="" required>
                    </div>
                 
                    <div class="align-center">
                        <button type="submit" class="btn-primary">Agregar</button>
                    </div>   
            </form>
        </main>
       
        <!--FOOTER-->
        <%- include("../partials/footer") %>
        
        <!--SCRIPTS-->
        <script src="/js/carrousel.js"></script>         
    </body>
</html>