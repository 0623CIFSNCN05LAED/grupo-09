<!DOCTYPE html>
<html lang="en">
    <!--HEAD-->
    <%- include("../partials/head") %>

    <body>
        <!--HEADER-->
        <%- include("../partials/header") %>

        <main>
            <form class="container-form my-1 flex flex-wrap" action="/productos/update/<%= Productos.id %>" method="POST">
                <div class="w-100"><h2 class="text-center">EDITAR PRODUCTO</h2></div>
                <div class="w-25 p-2 bold">
                    <label for="sku">SKU</label>
                </div>
                <div class="w-75">
                    <input 
                    class="form-control" 
                    type="text"
                    name="sku" 
                    id="sku" 
                    value="<%= Productos.sku %>" >
                    <%= locals.errors && errors.sku? 'is-invalid' : null %>"
                >
                <% if (locals.errors && errors.sku) { %>
                    <div class="text-danger">
                        <%= errors.sku.msg %> 
                    </div>
                <% } %>
                </div>

