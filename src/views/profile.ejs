<!DOCTYPE html>
<html lang="en">
    <!--HEAD-->
    <%- include("./partials/head") %>

    <body>
        <!--HEADER-->
        <%- include("./partials/header") %>

        <main>
            <section class="container-form">
                
                <div class="title">
                    <h2>Mi Perfil</h2>
                </div>
                <div class="flex">
                    <div class="form-group p-1">
                        <button><a href="/users/myProfile/edit/">Actualizar Datos Personales</a></button>
                    </div>
                    <div class="form-group p-1">
                        <button><a href="/users/myPassword/edit/">Modificar Contraseña</a></button>
                    </div>
                    <div class="form-group p-1">
                        <button><a href="">Historial de compras</a></button>
                    </div>
                    <div class="form-group p-1">
                        <button><a href="/logout">Cerrar Sesión</a></button>
                    </div>
                </div>

                <div class="title">
                    <h2>Datos Personales</h2>
                </div>
    
                <form action="/" method="post">
                    <div class="form-group my-1">
                        <label for="first_name">Nombre</label>
                        <input
                            name="first_name"
                            type="text"
                            class="form-control"
                            value="<%= user.fullName %>"
                            readonly
                        />
                    </div>
                    <div class="form-group my-1">
                        <label for="email">Email</label>
                        <input
                            name="email"
                            type="email"
                            class="form-control"
                            value="<%= user.email %>"
                            readonly
                        />
                    </div>
                    <div class="form-group my-1">
                        <label for="contact_number">Teléfono</label>
                        <input
                            name="contact_number"
                            type="tel"
                            class="form-control"
                            value="<%= user.telefono %>"
                            readonly
                        />
                    </div>
                    <div class="form-group my-1">
                        <% if (locals.isLogged && locals.userLogged.role_id == 1) { %>
                            <label for="role_id">Tipo de usuario:</label>
                            <input
                                name = "role_id"
                                class = "form-control"
                                type = "text"
                                value = "<% if (user.role_id == 1) { %>
                                            <%='Administrador'%>
                                        <% } %>"
                            />
                        <% } %>
                    </div>
                    <div class="form-group my-1">
                        <label for="avatar">Avatar</label>
                        <div>
                            <img src="/images/avatars/<%= user.avatar %>" alt="avatar"/>
                        </div>
                    </div>
                </form>
            </section>
        </main>

        <!--FOOTER-->
        <%- include("./partials/footer") %>
            
        <!--SCRIPTS-->
        <script src="/js/carrousel.js"></script>         
    </body>
</html>
